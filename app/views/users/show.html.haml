.mainUser
  .left
    .leftUpper
      %table
        %tr
          %th
            =link_to "マイページ", user_path(current_user.id)
        %tr
          %td
            =link_to '出品した商品'
        %tr
          %td
            =link_to 'コメントした商品'
        %tr
          %td
            =link_to '出品'
        %tr
          %td
            =link_to 'お問い合わせ'
    .leftBottom
      %table
        %tr
          %th
            ユーザー情報
        %tr
          %td
            = link_to destroy_user_session_path,method: :delete do
              ログアウト
        %tr
          %td
            =link_to '情報変更'
        %tr
          %td
            =link_to "クレジットカード登録", new_card_path
        %tr
          %td
            =link_to 'クレジットカード変更', new_card_path

  .right
    .userBox
      .userBox__name
        = current_user.nickname
      .userBox__title
        出品履歴
      .userBox__items
        .userBox__history__title
          -# - buyed_items.each do |item| 
            .itemHeader
              = item.name
              .time
                = recipe.created_at.cstrftime("%Y年%m月%d日")
            .itemDetail
              .itemImage
                = image_tag item.image, size: "300x180" if item.image.present?
              .itemBox
                .itemTitle
                  料理名：
                  = item.title
                .itemmemory
                  思い出：
                  = item.text             
                .itemshow
                  = link_to '詳しく見る', "/items/#{item.id}", method: :get

      
= render "shared/footer"

