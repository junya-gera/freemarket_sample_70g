.sign--page
  .sign
    .sign__container
      .sign__container--title
        %h2 新規登録
      .sign__container--form
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .field
            .field-label
              = f.label :ニックネーム
              %span.red 必須
            .field-input
              = f.text_field :nickname, autofocus: true,placeholder: "例)フリマ たかし", class: "textarea"

          .field
            .field-label
              = f.label :メールアドレス
              %span.red 必須
            .field-input
              = f.email_field :email,placeholder: "PC・携帯どちらでも可", class: "textarea"

          .field
            .field-label
              = f.label :パスワード
              %span.red 必須
            .field-input
              = f.password_field :password, autocomplete: "off", placeholder: "7文字以上の半角英数字", class: "textarea"

          .field
            .field-label
              = f.label :パスワード確認
              %span.red 必須
            .field-input
              = f.password_field :password_confirmation, autocomplete: "off", class: "textarea"

          %p.sign__container--form--text 本人確認
          %p.sign__container--form--identfication 安心安全にご利用いただくために、お客様の本人情報の登録にご協力ください。他のお客様に公開されることはありません。
          .name__field
            .field--name
              .field-label
                = f.label :苗字
                %span.red 必須
              .field-input
                = f.text_field :lastname, autofocus: true,placeholder: "例)南條", class: "name__textarea"

            .field--name
              .field-label
                = f.label :名前
                %span.red 必須
              .field-input
                = f.text_field :firstname, autofocus: true, placeholder: "例)愛乃", class: "name__textarea"

          .name__field
            .field--name
              .field-label
                = f.label :苗字（かな）
                %span.red 必須
              .field-input
                = f.text_field :lastname, autofocus: true,placeholder: "例)なんじょう", class: "name__textarea"

            .field--name
              .field-label
                = f.label :名前（かな）
                %span.red 必須
              .field-input
                = f.text_field :firstname, autofocus: true, placeholder: "例)よしの", class: "name__textarea"


          .field
            .field-label
              = f.label :生年月日
              %span.red 必須
            .field-input
              = f.date_select :birthday, autofocus: true

          %p.sign__container--form--text 送付先氏名
          .name__field
            .field--name
              .field-label
                = f.label :苗字
                %span.red 必須
              .field-input
                = f.text_field :lastname, autofocus: true, placeholder: "例)南條", class: "name__textarea"

            .field--name
              .field-label
                = f.label :名前
                %span.red 必須
              .field-input
                = f.text_field :firstname, autofocus: true, placeholder: "例)愛乃", class: "name__textarea"

          .name__field
            .field--name
              .field-label
                = f.label :苗字（かな）
                %span.red 必須
              .field-input
                = f.text_field :lastname, autofocus: true, placeholder: "例)なんじょう", class: "name__textarea"

            .field--name
              .field-label
                = f.label :名前（かな）
                %span.red 必須
              .field-input
                = f.text_field :firstname, autofocus: true, placeholder: "例)よしの", class: "name__textarea"


          %p.sign__container--form--text 送付先住所
          .field
            .field-label
              = f.label :郵便番号
              %span.red 必須
            .field-input
              = f.text_field :nickname, autofocus: true, class: "textarea"

          .field
            .field-label
              = f.label :都道府県
              %span.red 必須
            .field-input
              = f.text_field :firstname, autofocus: true, class: "textarea"

          .field
            .field-label
              = f.label :市区町村
              %span.red 必須
            .field-input
              = f.text_field :firstname, autofocus: true, class: "textarea"

          .field
            .field-label
              = f.label :番地
            .field-input
              = f.text_field :firstname, autofocus: true, class: "textarea"

          .field
            .field-label
              = f.label :マンション名、部屋番号
            .field-input
              = f.text_field :firstname, autofocus: true, class: "textarea"

          .field
            .field-label
              = f.label :お届け先電話番号
            .field-input
              = f.text_field :firstname, autofocus: true, class: "textarea"


          .regist
            = f.submit "登録", class: 'regist--btn'
            %h2 アカウントをお持ちの方はこちら
          = link_to "ログイン", new_session_path(resource_name), class: "login--btn"


