= render "shared/header"

.main2
  .sign--page
    .sign
      .sign__container
        .sign__container--title
          %h2 新規登録
        .sign__container--form
          = link_to 'Facebookで登録', user_facebook_omniauth_authorize_path, method: :post, class: "facebook--btn"
          = form_for(@user, url: user_registration_path) do |f|
            = devise_error_messages!
            .field
              .field-label
                = f.label :ニックネーム
                %span.red 必須
              .field-input
                = f.text_field :nickname, autofocus: true,placeholder: "例)フリマ たかし", class: "textarea"

            .field
              .field-label
                = f.label :メールアドレス
                %span.red 必須
              .field-input
                = f.email_field :email,placeholder: "PC・携帯どちらでも可", class: "textarea"

            .field
              .field-label
                = f.label :パスワード
                %span.red 必須
              .field-input
                = f.password_field :password, autocomplete: "off", placeholder: "7文字以上の半角英数字", class: "textarea"

            .field
              .field-label
                = f.label :パスワード確認
                %span.red 必須
              .field-input
                = f.password_field :password_confirmation, autocomplete: "off", class: "textarea"

            %p.sign__container--form--text 本人確認
            %p.sign__container--form--identfication 安心安全にご利用いただくために、お客様の本人情報の登録にご協力ください。他のお客様に公開されることはありません。
            .name__field
              .field--name
                .field-label
                  = f.label :苗字
                  %span.red 必須
                .field-input
                  = f.text_field :lastname, autofocus: true,placeholder: "例)新田", class: "name__textarea"

              .field--name
                .field-label
                  = f.label :名前
                  %span.red 必須
                .field-input
                  = f.text_field :firstname, autofocus: true, placeholder: "例)仁志", class: "name__textarea"

            .name__field
              .field--name
                .field-label
                  = f.label :苗字（かな）
                  %span.red 必須
                .field-input
                  = f.text_field :lastname_kana, autofocus: true,placeholder: "例)にった", class: "name__textarea"

              .field--name
                .field-label
                  = f.label :名前（かな）
                  %span.red 必須
                .field-input
                  = f.text_field :firstname_kana, autofocus: true, placeholder: "例)ひとし", class: "name__textarea"


            .field
              .field-label
                = f.label :生年月日
                %span.red 必須
              .field-input
                = f.date_select :birthday, autofocus: true


              .regist
                = f.submit "次へ", class: 'regist--btn'
                %h2 アカウントをお持ちの方はこちら
              = link_to "ログイン", new_session_path(resource_name), class: "login--btn"
= render "shared/footer"


