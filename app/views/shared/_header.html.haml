.header
  .upper
    .upper__logo
      = image_tag 'material/logo/logo.png', size: "150x70",class:'logo2'
    .upper__search
      %input.text-serch
      %button 
        =icon('fas','search')

  .bottom
    .bottom__left
      =link_to "カテゴリー"
      =link_to "ブランド", destroy_user_session_path,method: :delete
    .bottom__right
      - if user_signed_in?
        =link_to "マイページ", user_path(current_user.id)
      -else
        =link_to "ログイン", new_user_session_path
        =link_to "新規会員登録", new_user_registration_path
